{
  "hosting": [
    {
      "target": "dev",
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "src/**",
        "public/**",
        "*.log",
        "package*.json",
        "README.md"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000"
            }
          ]
        }
      ]
    },
    {
      "target": "stag",
      "public": "build",
      "ignore": [
